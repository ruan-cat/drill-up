{
	"name": "@ruan-cat/root",
	"author": "阮喵喵",
	"description": "rmmv项目的monorepo单仓。用于测试实验各种东西。",
	"version": "0.0.1",
	"private": true,
	"main": "index.js",
	"type": "module",
	"packageManager": "pnpm@10.16.1",
	"engines": {
		"node": ">=22.14.0"
	},
	"keywords": [
		"drill-up",
		"monorepo"
	],
	"scripts": {
		"up-taze": "pnpm -w up @ruan-cat/taze-config -L && npx taze -r",
		"format": "prettier --experimental-cli --write .",
		"git:dev-2-main": "git rebase dev main && pnpm run git:push",
		"git:main-2-dev": "git rebase main dev",
		"code-workspace:create": "tsx ./scripts/generate.code-workspace.ts --name=rm具体项目工作区",
		"corepack:pnpm": "corepack enable && corepack install",
		"git:fetch": "git fetch -p",
		"clear:deps": "rimraf -g '**/{node_modules,package-lock.json,pnpm-lock.yaml}'",
		"clear:cache": "rimraf -g '**/{dist,.turbo,.vercel,cache,temp}'",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"git:push": "git push --follow-tags",
		"preinstall": "npm run corepack:pnpm && npx only-allow pnpm",
		"deploy-vercel": "tsx ./scripts/vercel-deploy-tool.ts --env-path=.env.deploy-vercel",
		"dev:drill": "pnpm --filter @ruan-cat/drill-up run dev:drill",
		"build:drill": "pnpm --filter @ruan-cat/drill-up run build:drill",
		"build:rpgmv-plugins": "pnpm --filter @ruan-cat/drill-up run build:rpgmv-plugins",
		"build:mv-doc": "pnpm -F=@ruan-cat/mv-docs run build"
	},
	"dependencies": {
		"@ruan-cat/utils": "^4.10.0",
		"lodash-es": "^4.17.21",
		"pinia-plugin-persistedstate": "^4.5.0"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^5.3.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.35.0",
		"@prettier/plugin-oxc": "^0.0.4",
		"@ruan-cat/commitlint-config": "^3.0.0",
		"@ruan-cat/generate-code-workspace": "^0.4.13",
		"@ruan-cat/taze-config": "^0.2.0",
		"@ruan-cat/vercel-deploy-tool": "^0.11.0",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^20.19.14",
		"@vuepress/bundler-vite": "2.0.0-rc.14",
		"commitizen": "^4.3.1",
		"cpx2": "^8.0.0",
		"cross-env": "^10.0.0",
		"cz-git": "^1.12.0",
		"eslint": "^9.35.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-config-prettier": "^9.1.2",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-format": "^1.0.1",
		"eslint-plugin-jsdoc": "^54.7.0",
		"eslint-plugin-prettier": "^5.5.4",
		"markdown-it": "^14.1.0",
		"mkdirp": "^3.0.1",
		"prettier": "^3.6.2",
		"prettier-plugin-lint-md": "^1.0.1",
		"rimraf": "^5.0.10",
		"shx": "^0.4.0",
		"taze": "^19.6.0",
		"tsx": "^4.20.5",
		"turbo": "^2.5.6",
		"type-plus": "^7.6.2",
		"typescript": "^5.9.2",
		"typescript-lodash": "^0.2.2",
		"vercel": "^46.1.1",
		"vite": "^5.3.1",
		"vite-plugin-vue-devtools": "^8.0.2",
		"vue": "^3.5.21",
		"vuepress": "2.0.0-rc.14",
		"vuepress-theme-hope": "2.0.0-rc.50"
	}
}
