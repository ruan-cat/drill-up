{
	"compilerOptions": {
		"composite": true,
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"moduleDetection": "force",
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": [
			// https://juejin.cn/post/7262322846252613693
			"element-plus/global.d.ts",
			// 目前包含的rmmv源码，包含了部分node的全局常量，故需要提供类型声明包
			"node"
		],
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.d.ts",
		"./src/**/*.tsx",
		"./src/**/*.vue",
		// 导入自动生成的类型声明文件
		"auto-imports.d.ts",
		"components.d.ts",
		"./types/**/*.d.ts"
	]
}