{
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.node.json"
		}
	],
	"compilerOptions": {
		"composite": false,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "dist",
		"types": [
			"fpsmeter",
			"lz-string",
			// https://github.com/pixijs/pixi-typescript/tree/v4.5.4
			"pixi.js"
			// "@types/pixi.js"
		],
	},
	"include": [
		// 包含全部的类型声明文件
		"./src/types/**/*.ts",
		"./drill-project/js/main.js",
		// rm源码不再参与类型声明管控
		"./drill-project/js/rpg_*.js",
		// "./js/plugins/*.js",
		"./drill-project/js/plugins/MOG_*.js",
		"./drill-project/js/plugins/YEP_*.js",
		"./drill-project/js/plugins/*ruancat*.js"
		// 这些文件已经有了专门的类型声明文件了 故不应该被包含
		// "./drill-project/js/libs/pixi*.js",
		// "./js/plugins/Drill_*.js",
	],
	"exclude": [
		// FIXIME: 不得不排除该文件
		"./drill-project/js/plugins/----*.js",
		"./drill-project/js/plugins.js",
		"./drill-project/js/libs",
		"./drill-project/js/libs/pixi*.js",
		"./drill-project/data",
		"./drill-project/audio",
		"./drill-project/img",
		"./drill-project/movies",
		"./drill-project/icon",
		"./drill-project/save",
		"./drill-project/index.html",
		"./drill-project/fonts",
		"node_modules"
	]
}