{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "types",
		"allowJs": true,
		"checkJs": true
	},
	"include": [
		"./*.js",
		"./scripts/**/*"
	],
	"exclude": [
		"./libs/**/*",
		"./plugins/**/*"
	]
}